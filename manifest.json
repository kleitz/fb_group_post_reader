{
  "name": "Facebook posts reader",
  "description": "This extension read facebook posts from a group and send an email",
  "version": "1.0.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": { "128": "mail_128x128.png" },
  "options_page": "options.html",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
    "default_title": "Email posts",
    "default_icon": "email_16x16.png"
  },
  "content_scripts": [
      {
        "matches": ["https://www.facebook.com/groups/*"],        
        "js": ["jquery-3.1.1.min.js"]
      }
    ],
  "manifest_version": 2
}